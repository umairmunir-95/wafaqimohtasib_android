<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:elevation="@dimen/elevation_size">

    <ImageView
        android:id="@+id/toolbar_iv_back"
        android:layout_width="@dimen/p35"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:tint="@color/white"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/p5"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_back"/>

    <ImageView
        android:id="@+id/toolbar_exit"
        android:layout_width="@dimen/p35"
        android:layout_height="match_parent"
        android:tint="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/p10"
        android:paddingLeft="@dimen/p5"
        app:srcCompat="@drawable/ic_exit"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/label_x__big"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:visibility="gone" />

</RelativeLayout>