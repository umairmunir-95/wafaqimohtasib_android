<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FormLabels">
        <item name="android:padding">@dimen/p10</item>
        <item name="android:textSize">@dimen/ts18</item>
        <item name="android:layout_marginRight">@dimen/p2</item>
        <item name="android:layout_marginLeft">@dimen/p2</item>
    </style>

    <style name="FormSpinners">
        <item name="android:layout_marginLeft">@dimen/p10</item>
        <item name="android:layout_marginRight">@dimen/p10</item>
        <item name="android:padding">@dimen/p10</item>
        <item name="android:textSize">@dimen/ts18</item>
    </style>

    <style name="FormButtons">
        <item name="android:layout_marginLeft">@dimen/p10</item>
        <item name="android:layout_marginRight">@dimen/p10</item>
        <item name="android:height">@dimen/p40</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="FormEditText">
        <item name="android:layout_marginLeft">@dimen/p10</item>
        <item name="android:layout_marginRight">@dimen/p10</item>
        <item name="android:textSize">@dimen/ts16</item>
        <item name="android:padding">@dimen/p5</item>
        <item name="android:drawablePadding">@dimen/p10</item>

    </style>
</resources>
